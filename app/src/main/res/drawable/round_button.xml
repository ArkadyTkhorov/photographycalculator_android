<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:state_pressed="true" android:top="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#000" />
            <gradient android:angle="-90" android:endColor="#AAA" android:startColor="#222" />
        </shape>
    </item>
    <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:state_focused="true" android:top="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#000" />
            <solid android:color="#58857e" />
        </shape>
    </item>
    <item>
        <shape android:bottom="3dp" android:left="3dp" android:right="3dp" android:shape="rectangle" android:top="3dp">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#000" />
            <gradient android:angle="-90" android:endColor="#CCC" android:startColor="#AAA" />
        </shape>
    </item>
</selector>
