<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#cccccc"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:background="@android:color/white"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_sin"
            style="@style/ButtonText"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_black"
            android:clickable="true"
            android:padding="0dp"
            android:text="sin"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/button_cos"
            style="@style/ButtonText"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_black"
            android:clickable="true"

            android:padding="0dp"
            android:text="cos"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/button_tan"
            style="@style/ButtonText"
            android:layout_marginRight="5dp"
            android:layout_weight="1"

            android:background="@drawable/btn_black"
            android:clickable="true"

            android:padding="0dp"
            android:text="tan"
            android:textColor="@color/White" />


        <Button
            android:id="@+id/button_del"
            style="@style/ButtonText"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_black"
            android:clickable="true"
            android:padding="0dp"
            android:text="@string/delete_numbers"
            android:textColor="#fffffdfd" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout23"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_bin"

            style="@style/ButtonText"

            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_black"
            android:clickable="true"

            android:padding="0dp"
            android:text="bin"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/button_dec"

            style="@style/ButtonText"

            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_black"
            android:clickable="true"

            android:padding="0dp"
            android:text="dec"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/button_hex"
            style="@style/ButtonText"

            android:layout_marginRight="5dp"

            android:layout_weight="1"
            android:background="@drawable/btn_black"
            android:clickable="true"

            android:padding="0dp"
            android:text="hex"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/button_oct"

            style="@style/ButtonText"

            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_black"
            android:clickable="true"

            android:padding="0dp"
            android:text="oct"
            android:textColor="@color/White" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout53"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:focusableInTouchMode="false"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_squared_2"

            style="@style/ButtonText"

            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_black"
            android:clickable="true"

            android:padding="0dp"
            android:text="@string/squared_two"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/button_qube"
            style="@style/ButtonText"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_black"
            android:clickable="true"

            android:padding="0dp"
            android:text="@string/qube"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/button_root"

            style="@style/ButtonText"

            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_black"
            android:clickable="true"

            android:padding="0dp"
            android:text="@string/square_root_symbol"
            android:textColor="@color/White" />


        <Button
            android:id="@+id/button_pi"

            style="@style/ButtonText"

            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_black"
            android:clickable="true"

            android:padding="0dp"
            android:text="@string/pi"
            android:textColor="@color/White" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout134"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@color/orange"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@color/orange"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.00"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:background="@color/orange"
            android:textColor="@android:color/white"
            android:text="9" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.00"
            android:background="@color/orange"
            android:textColor="@android:color/white"
            android:text="/"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout154"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@color/orange"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@color/orange"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.00"
            android:layout_marginRight="5dp"
            android:background="@color/orange"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:text="6" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.00"
            android:background="@color/orange"
            android:textColor="@android:color/white"
            android:text="*"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout123"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@color/orange"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@color/orange"
            android:textSize="25sp"

            android:textColor="@android:color/white"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.00"
            android:layout_marginRight="5dp"
            android:background="@color/orange"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:text="3" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.00"
            android:background="@color/orange"
            android:textColor="@android:color/white"
            android:text="-"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@color/orange"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:text="0" />

        <Button
            android:id="@+id/buttonPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:background="@color/orange"
            android:textColor="@android:color/white"
            android:text="."
            />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@color/orange"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:text="="
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/orange"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:text="+"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonExit"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:background="@color/orange"
            android:textColor="@android:color/white"
            android:text="Exit"
            android:layout_marginRight="5dp"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@color/orange"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="Reset"
             />

    </LinearLayout>

</LinearLayout>
